<%- include('../includes/header.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <main class="container my-5">
            <div class="row justify-content-md-center">
                <div class="col-sm-12 col-md-12 col-lg-8">
                    <div class="card shadow main-card">
                        <div class="row ">

                            <div class="col-md-4">
                                <div class="image">
                                    <img src="<%= product.imageUrl %>" class="card-img-top img-fluid h-100" alt="<%= product.title%>">
                                </div>
                            </div>

                            <div class="col-md-8" style="display: flex;">

                                <div class="card-body" style="    display: flex;flex-direction: column; justify-content: center;">

                                    <div class="col-md-8">
                                        <h1 class="display-6 fw-bold lh-1">
                                            <%= product.title %>
                                        </h1>
                                        <span class="badge rounded-pill bg-info">
                                            <%= product.label %>
                                        </span>
                                    </div>

                                    <h5 class="mt-3" style="font-weight: bold">R
                                        <%= product.price %>
                                    </h5>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <small class="text-muted">
                                                <%= product.description %>
                                            </small>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">

                                            <form action="/cart" method="post">

                                                <input type="hidden" id="productId" name="productId" value="<%= product._id %>" />


                                                <div class="row mt-4">
                                                    <% if (isAuthenticated) { %>
                                                        <div class="col-md-6">
                                                            <div class="d-grid">
                                                                <button type="submit" class="btn btn-success mb-2">Add to cart</button>
                                                            </div>
                                                        </div>

                                                        <% } %>
                                                            <div class="col-md-6">
                                                                <div class="d-grid">
                                                                    <a href="/products " class="btn btn-primary">Back</a>
                                                                </div>
                                                            </div>
                                                </div>






                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>



        </main>
        <%- include('../includes/footer.ejs') %>