<%- include('../includes/header.ejs') %>
    <%- include('../includes/nav.ejs') %>

        <main class="my-5">
            <h1 class="display-5 fw-bold lh-1 mb-5 text-center">Our Products</h1>
            <% if (prods.length> 0) { %>
                <div class="container-fluid">
                    <!--Section: Products-->
                    <section>
                        <div class="row">
                            <% for (let product of prods) { %>

                                <div class="col-lg-3 col-md-4 mb-4">
                                    <div class="card main-card shadow">
                                        <div class="card-body p-0">

                                            <div class="card-banner" style="background-image: url(' <%= product.imageUrl %>');">
                                                <article class="card-body caption" style="display: flex;flex-direction: column;flex-wrap: wrap;align-content: flex-start;justify-content: flex-end;align-items: flex-start;">

                                                    <a href="/products/<%= product._id %>">
                                                        <h4 class="card-title">
                                                            <%= product.title %>
                                                        </h4>
                                                    </a>
                                                    <span span class="badge rounded-pill bg-info float-end">
                                                        <%= product.label %>
                                                    </span>
                                                    <h5 class="mt-3">R
                                                        <%= product.price %>
                                                    </h5>


                                                    <form action="/cart" method="POST" class="mt-4">

                                                        <input type="hidden" id="productId" name="productId" value="<%= product._id %>" />

                                                        <a href="/products/<%= product._id %>" class="btn btn-success">View</a>
                                                        <button type="submit" class="btn btn-primary">Add to
                                                                Cart</button>


                                                    </form>
                                                </article>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <% } %>
                        </div>
                    </section>
                    <!--Section: Products-->
                </div>
                <% } else { %>
                    <h3 class="text-center">No Products Found</h3>
                    <% } %>
        </main>
        <%- include('../includes/footer.ejs') %>