<%- include('../includes/header.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <main class="container my-5">
            <h1 class="display-5 fw-bold lh-1 mb-5 text-center">Admin - All Products</h1>

            <% if (prods.length> 0) { %>
                <div class="row ">
                    <div class="col-md-12 col-lg-12">
                        <div class="card main-card shadow mb-3 ">
                            <div class="table-responsive">
                                <table class="table text-center">
                                    <tr style="text-align: center;">
                                        <th width="10%">Image</th>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Label</th>
                                        <th>Edit</th>
                                        <th>Action</th>
                                    </tr>





                                    <% for (let product of prods) { %>
                                        <tr>
                                            <td>
                                                <div class="img-wrap">
                                                    <img src="<%= product.imageUrl %>" class="card-img-top img-fluid" alt="<%= product.title %>" />
                                                </div>

                                            </td>
                                            <td>
                                                <%= product.title %>
                                            </td>
                                            <td>
                                                R
                                                <%= product.price %>
                                            </td>
                                            <td>
                                                <%= product.label %>
                                            </td>
                                            <td>

                                                <div class="d-grid mx-auto">
                                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn btn-warning">Edit</a>
                                                </div>
                                            </td>
                                            <td>
                                                <form action="/admin/delete-product" method="POST">

                                                    <input type="hidden" name="productId" id="productId" value="<%= product._id %>">
                                                    <div class="d-grid mx-auto">
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </div>
                                                </form>
                                            </td>

                                        </tr>
                                        <% } %>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <% } else { %>
                    <h1 class="text-center">No Products Found</h1>
                    <% } %>

        </main>
        <%- include('../includes/footer.ejs') %>