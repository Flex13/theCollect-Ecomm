<%- include('../includes/header.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <main class="container my-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow main-card">
                        <div class="row">

                            <div class="col-md-4">
                                <div class="image">
                                    <img src="<%= product.imageUrl %>" class="card-img-top img-fluid h-100" alt="<%= product.title%>">
                                </div>
                            </div>




                            <div class="col-md-8" style="display: flex;">

                                <div class="card-body" style="    display: flex;flex-direction: column; justify-content: center;">

                                    <div class="col-md-8">
                                        <h1 class="display-6 fw-bold lh-1">
                                            <%= product.title %>
                                        </h1>
                                        <span class="badge rounded-pill bg-info">
                                        <%= product.label %>
                                    </span>
                                    </div>
                                    <h5 class="mt-3" style="font-weight: bold">R
                                        <%= product.price %>
                                    </h5>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <p class="text-muted">
                                                <%= product.description %>
                                            </p>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">

                                            <form action="/admin/delete-product" method="POST">

                                                <input type="hidden" id="productId" name="productId" value="<%= product._id %>" />

                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn btn-warning w-100">Edit</a>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <a href="/admin/product-list" class="btn btn-dark w-100">Back</a>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </main>
        <%- include('../includes/footer.ejs') %>