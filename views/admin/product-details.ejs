<%- include('../includes/header.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <main class="container my-5">
            <div class="card shadow main-card">
                <div class="row justify-content-md-center">

                    <div class="col-md-4">
                        <img src="<%= product.imageUrl %>" class="card-img-top img-fluid h-100" alt="<%= product.title%>">
                    </div>

                    <div class="col-md-8">

                        <div class="card-body">

                            <h1 class="display-6 fw-bold lh-1">
                                <%= product.title %>
                            </h1>
                            <span class="badge rounded-pill bg-info"><%= product.label %></span>
                            <h5 class="mt-3" style="font-weight: bold">R
                                <%= product.price %>
                            </h5>

                            <div class="row">
                                <div class="col-md-12">
                                    <p class="text-muted">
                                        <%= product.description %>
                                    </p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">

                                    <form action="/cart" method="POST">

                                        <input type="hidden" id="productId" name="productId" value="<%= product.id %>" />

                                        <div class="d-grid gap-2 col-md-4 ml-auto mt-4">

                                            <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn btn-warning">Edit</a>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                            <a href="/admin/product-list" class="btn btn-dark">Back</a>
                                        </div>


                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </main>
        <%- include('../includes/footer.ejs') %>